           android:layout_marginTop="14dp"
           android:text="(Kg)" /> -->

   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewFatTrendUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp"
            android:text="(kg)" />

        <RelativeLayout
            android:id="@+id/relativeLayoutFatTrendBackground"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1" >
			<edu.xidian.mti1001.virty.activity2nd.ShowFatTrend	
			    android:id="@+id/showFatTrend"		    
				android:layout_width="fill_parent"
                android:layout_height="fill_parent"
			/>

        </RelativeLayout>

    </LinearLayout>

   <RelativeLayout
       android:layout_width="fill_parent"
       android:layout_height="40dp" >

       <TableRow
           android:id="@+id/tableRow1"
           android:layout_width="fill_parent"
           android:layout_height="28dp"
           android:layout_alignParentBottom="true"
           android:layout_centerHorizontal="true"

           android:layout_marginLeft="50dp"
           android:layout_marginRight="50dp"
           android:layout_marginBottom="5dp" >

           <Button
               android:id="@+id/buttonFatTrendSeg1"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:background="@drawable/active_button_fat_trend_segment1" />
           <Button
               android:id="@+id/buttonFatTrendSeg2"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:background="@drawable/active_button_fat_trend_segment2" />
           <Button
               android:id="@+id/buttonFatTrendSeg3"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:background="@drawable/active_button_fat_trend_segment3" />
           <Button
               android:id="@+id/buttonFatTrendSeg4"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:background="@drawable/active_button_fat_trend_segment4" />
           <Button
               android:id="@+id/buttonFatTrendSeg5"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:background="@drawable/active_button_fat_trend_segment5" />
           <Button
               android:id="@+id/buttonFatTrendSeg6"
               android:layout_width="0dp"
                android:layout_height="wrap_content"
               android:layout_weight="1"
               android:background="@drawable/active_button_fat_trend_segment6" />
          
       </TableRow>
