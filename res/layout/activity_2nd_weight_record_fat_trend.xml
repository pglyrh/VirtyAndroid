<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" >
    
    <LinearLayout 
        style="@style/top_bar" >
        <Button
            style="@style/top_button"
            android:layout_marginLeft="10dp"
            android:background="@null"/>
        <TextView 
			style="@style/top_text"
			android:text="@string/Activity2FatTrendTop" />

        <Button
            android:id="@+id/buttonFatTrendShare"
            style="@style/top_button"
            android:layout_marginRight="10dp"
            android:background="@drawable/active_button_share" />

    </LinearLayout>
    
    <TableLayout 
        android:layout_width="fill_parent"
		android:layout_height="80dp"
		android:orientation="horizontal"
		android:gravity="center_vertical"
        >
        <TableRow
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center" >
            <ImageView
                android:id="@+id/buttonFatTrendWeek"
                style="@style/trend_button"
                android:src="@drawable/active_button_2nd_trend_week" />

            <ImageView
                android:id="@+id/buttonFatTrendMonth"
                style="@style/trend_button"
                android:src="@drawable/active_button_2nd_trend_month" />

            <ImageView
                android:id="@+id/buttonFatTrendSeason"
                style="@style/trend_button"
                android:src="@drawable/active_button_2nd_trend_season" />

            <ImageView
                android:id="@+id/buttonFatTrendYear"
                style="@style/trend_button"
                android:src="@drawable/active_button_2nd_trend_year" />
            
        </TableRow>
        

        
    </TableLayout>
    
