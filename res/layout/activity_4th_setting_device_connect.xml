<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout style="@style/top_bar" >
        <Button
            android:id="@+id/button4thDeviceConnectBack"
            style="@style/top_button"
            android:layout_marginLeft="10dp"
            android:background="@drawable/active_button_back" />
        <TextView
            style="@style/top_text"
            android:text="@string/Activity4SettingDeviceConnectTop" />
        <Button
            style="@style/top_button"
            android:layout_marginRight="10dp"
            android:background="@null" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/background_border" >

        <TextView
            android:id="@+id/textView4thDeviceConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/Activity4SettingDeviceConnect" />

        <TextView
            android:id="@+id/textView4thDeviceConnectDeviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4thDeviceConnect"
            android:layout_centerHorizontal="true"
            android:gravity="center" />

    </RelativeLayout>
   
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="70dp"  >

        <Button
            android:id="@+id/button4thDeviceConnectBluetooth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
			android:background="@drawable/active_button_device_connect_setting_bluetooth"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textViewBluetooth"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="80dp"
            android:gravity="center"
            android:text="@string/Activity4SettingDeviceConnectBluetooth" />

    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="70dp" >

        <Button
            android:id="@+id/button4thDeviceConnectManual"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
			android:background="@drawable/active_button_device_connect_setting_manual"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textViewManual"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="80dp"
            android:gravity="center"
            android:text="@string/Activity4SettingDeviceConnectManual" />

    </RelativeLayout>
 
</LinearLayout>